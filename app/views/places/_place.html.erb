
<div class="row">
	<div class="col-md-5">
		<%= image_tag place.image, style: "width: 100%" %>	
	</div>
	<div class="col-md-7">
	<p>  
		<%= place.kind %> // 
	</p>
	<p>	
		<h2><%= link_to place.title, place %> <%= simple_format place.content %></h2>
	</p>

	<p class="text_muted">
		<small>Posted at <%= place.created_at.to_formatted_s(:long) %></small>
	</p>
</div>
</div>
